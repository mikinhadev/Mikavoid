package me.seunome.transformarplugin;

import org.bukkit.Bukkit;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.EntityType;
import org.bukkit.entity.Player;

public class TransformarCommand implements CommandExecutor {
  @Override
  public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
    if (cmd.getName().equalsIgnoreCase("transformar")) {
      if (sender instanceof Player) {
        Player p = (Player) sender;
        if (args.length > 0) {
          String entidade = args[0].toUpperCase();
          try {
            EntityType tipo = EntityType.valueOf(entidade);
            p.getWorld().spawnEntity(p.getLocation(), tipo);
            p.remove();
          } catch (IllegalArgumentException e) {
            p.sendMessage("§cEntidade não encontrada!");
          }
        }
      }
    }
    return true;
  }
}
